<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/main_bg"
    tools:context="com.alexkaz.game2048.GameActivity">

    <LinearLayout
        android:id="@+id/transparentBlackPanel"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="6dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="6dp"
        android:background="@color/transparent_black">

        <FrameLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_weight="189"
            android:background="@drawable/title_bg">

        </FrameLayout>

        <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingBottom="24dp"
            android:paddingRight="28dp"

            android:layout_weight="173"
            app:columnCount="2"
            app:rowCount="2"
            app:orientation="horizontal"
            android:id="@+id/infoPanel"
            android:layout_marginBottom="5dp"
            android:background="@drawable/info_panel_bg">
            <FrameLayout
                android:layout_marginRight="2dp"

                android:minWidth="136dp"

                app:layout_rowWeight="50"
                app:layout_columnWeight="70"
                app:layout_gravity="fill_horizontal|fill_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:text="SCORES:34765"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#EFC130"

                    android:shadowColor="#494949"
                    android:shadowDx="5"
                    android:shadowDy="5"
                    android:shadowRadius="5"

                    android:gravity="center_horizontal|center_vertical"
                    android:id="@+id/txtScores" />
            </FrameLayout>
            <FrameLayout

                android:layout_marginLeft="4dp"
                android:minWidth="90dp"

                app:layout_rowWeight="50"
                app:layout_columnWeight="30"
                app:layout_gravity="fill_horizontal|fill_vertical"
                >
                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_height="match_parent"
                    android:background="@drawable/menu_btn_selector"
                    android:id="@+id/menuBtn"
                    android:onClick="onClickMenuBtn"/>
                <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:layout_gravity="center"-->
                    <!--android:text="BEST"-->
                    <!--android:textColor="#EFC130"-->
                    <!--android:textStyle="bold"-->
                    <!--android:textSize="23sp"-->

                    <!--android:shadowColor="#494949"-->
                    <!--android:shadowDx="5"-->
                    <!--android:shadowDy="5"-->
                    <!--android:shadowRadius="5"-->

                    <!--android:gravity="center_horizontal|center_vertical"-->
                    <!--android:id="@+id/txt2BestScores"/>-->

            </FrameLayout>
            <FrameLayout

                android:layout_marginTop="5dp"

                app:layout_rowWeight="50"
                app:layout_columnSpan="2"
                app:layout_gravity="fill_horizontal|fill_vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="BEST SCORES:42341"
                    android:textColor="#EFC130"
                    android:textStyle="bold"
                    android:textSize="20sp"

                    android:shadowColor="#494949"
                    android:shadowDx="5"
                    android:shadowDy="5"
                    android:shadowRadius="5"

                    android:gravity="center_horizontal|center_vertical"
                    android:id="@+id/txtBestScores"/>
            </FrameLayout>
        </android.support.v7.widget.GridLayout>

        <FrameLayout
            android:id="@+id/gameFieldWrapper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="99"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/gamefield_bg">

        </FrameLayout>

    </LinearLayout>




</RelativeLayout>
