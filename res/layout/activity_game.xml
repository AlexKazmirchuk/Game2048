<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/main_bg"
    tools:context="com.alexkaz.game2048.GameActivity">

    <LinearLayout
        android:id="@+id/transparentBlackPanel"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="6dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="6dp"
        android:background="@color/transparent_black">

        <FrameLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/title_bg">
        </FrameLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:rowCount="3"
            android:columnCount="3"
            android:id="@+id/infoPanel"
            android:layout_marginBottom="5dp"
            android:background="@drawable/info_panel_bg">

            <TextView
                android:layout_width="156dp"
                android:layout_height="42dp"
                android:text="SCORES:3485"
                android:textStyle="bold"
                android:textSize="21sp"
                android:textColor="#EFC130"

                android:shadowColor="#494949"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="5"

                android:layout_marginLeft="9dp"
                android:layout_marginStart="9dp"
                android:layout_marginTop="11dp"
                android:gravity="center_horizontal|center_vertical"
                android:id="@+id/txtScores"
                android:layout_row="0"
                android:layout_column="0" />

            <ImageButton
                android:layout_width="85dp"
                android:layout_height="42dp"
                android:layout_marginTop="11dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/menu_btn_selector"
                android:id="@+id/menuBtn"
                android:onClick="onClickMenuBtn"
                android:layout_row="0"
                android:layout_column="1" />

            <TextView
                android:layout_width="246dp"
                android:layout_height="42dp"
                android:text="BEST SCORES:42341"
                android:textColor="#EFC130"
                android:textStyle="bold"
                android:textSize="23sp"

                android:shadowColor="#494949"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="5"

                android:layout_marginLeft="9dp"
                android:layout_marginStart="9dp"
                android:layout_marginTop="6dp"
                android:gravity="center_horizontal|center_vertical"
                android:layout_columnSpan="2"
                android:id="@+id/txtBestScores"
                android:layout_row="1"
                android:layout_column="0" />
        </GridLayout>

        <FrameLayout
            android:id="@+id/gameFieldWrapper"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:background="@drawable/gamefield_bg">

        </FrameLayout>

    </LinearLayout>




</RelativeLayout>
