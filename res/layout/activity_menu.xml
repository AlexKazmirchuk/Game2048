<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".uicomp.MenuActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@drawable/transparent_dark_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:paddingBottom="22dp"
            android:paddingRight="20dp"
            android:paddingLeft="13dp"
            android:paddingTop="12dp"
            android:background="@drawable/menu_bg"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal|center_vertical">


            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:background="@drawable/first_item_bg"
                android:text="RESUME"
                android:textStyle="bold"
                android:textSize="21sp"
                android:textColor="#EFC130"

                android:shadowColor="#494949"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="5"

                android:id="@+id/resumeBtn"
                android:layout_gravity="center_horizontal" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:background="@drawable/second_item_bg"
                android:text="RESTART"
                android:textStyle="bold"
                android:textSize="21sp"
                android:textColor="#EFC130"

                android:shadowColor="#494949"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="5"

                android:id="@+id/restartBtn"
                android:layout_gravity="center_horizontal" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:background="@drawable/third_item_bg"
                android:text="MODE:ORIGINAL"
                android:textStyle="bold"
                android:textSize="21sp"
                android:textColor="#EFC130"

                android:shadowColor="#494949"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="5"

                android:id="@+id/modeBtn"
                android:layout_gravity="center_horizontal" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:background="@drawable/fourth_item_bg"
                android:text="MUSIC:ON"
                android:textStyle="bold"
                android:textSize="21sp"
                android:textColor="#EFC130"

                android:shadowColor="#494949"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="5"

                android:id="@+id/musicBtn"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

    </FrameLayout>


</RelativeLayout>
