<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/root_padding_left"
        android:paddingStart="@dimen/root_padding_left"
        android:paddingRight="@dimen/root_padding_right"
        android:paddingEnd="@dimen/root_padding_right">
        <LinearLayout
            android:layout_width="@dimen/menu_container_width"
            android:layout_height="@dimen/menu_container_height"
            android:paddingBottom="@dimen/menu_container_padding_bottom"
            android:paddingLeft="@dimen/menu_container_padding_left"
            android:paddingStart="@dimen/menu_container_padding_left"
            android:paddingRight="@dimen/menu_container_padding_right"
            android:paddingEnd="@dimen/menu_container_padding_right"
            android:paddingTop="@dimen/menu_container_padding_top"
            android:background="@drawable/menu_bg"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal|center_vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:background="@drawable/first_item_bg_selector"
                android:text="@string/resume_btn_text"
                android:textStyle="bold"
                android:textSize="@dimen/menu_button_text_size"
                android:textColor="@color/info_panel_text_color1"

                android:shadowColor="@color/info_panel_text_shadow_color"
                android:shadowDx="@integer/text_shadow_x"
                android:shadowDy="@integer/text_shadow_y"
                android:shadowRadius="@integer/text_shadow_radius"

                android:id="@+id/resumeBtn"
                android:layout_gravity="center_horizontal" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:background="@drawable/second_item_bg_selector"
                android:text="@string/restart_btn_text"
                android:textStyle="bold"
                android:textSize="@dimen/menu_button_text_size"
                android:textColor="@color/info_panel_text_color1"

                android:shadowColor="@color/info_panel_text_shadow_color"
                android:shadowDx="@integer/text_shadow_x"
                android:shadowDy="@integer/text_shadow_y"
                android:shadowRadius="@integer/text_shadow_radius"

                android:id="@+id/restartBtn"
                android:layout_gravity="center_horizontal" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:background="@drawable/third_item_bg_selector"
                android:text="@string/mode_btn_text"
                android:textStyle="bold"
                android:textSize="@dimen/menu_button_text_size"
                android:textColor="@color/info_panel_text_color1"

                android:shadowColor="@color/info_panel_text_shadow_color"
                android:shadowDx="@integer/text_shadow_x"
                android:shadowDy="@integer/text_shadow_y"
                android:shadowRadius="@integer/text_shadow_radius"

                android:id="@+id/modeBtn"
                android:layout_gravity="center_horizontal" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:background="@drawable/fourth_item_bg_selector"
                android:text="@string/music_btn_text"
                android:textStyle="bold"
                android:textSize="@dimen/menu_button_text_size"
                android:textColor="@color/info_panel_text_color1"
                android:shadowColor="@color/info_panel_text_shadow_color"
                android:shadowDx="@integer/text_shadow_x"
                android:shadowDy="@integer/text_shadow_y"
                android:shadowRadius="@integer/text_shadow_radius"

                android:id="@+id/musicBtn"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

    </FrameLayout>


</RelativeLayout>
